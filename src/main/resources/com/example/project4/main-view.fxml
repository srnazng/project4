<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project4.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
       <Label text="RU Pizza" textFill="#d60b0b">
           <font>
               <Font name="Avenir Next Bold" size="62.0" />
           </font>
           <padding>
               <Insets left="30.0" top="20.0" />
           </padding>
       </Label>
      <GridPane prefHeight="450.0" prefWidth="600.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
             <VBox alignment="CENTER" onMouseClicked="#onChicagoClick" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="TOP">
                <ImageView fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                   <image>
                      <Image url="@../../../assets/chicago_pizza.jpeg" />
                   </image>
                   <GridPane.margin>
                      <Insets />
                   </GridPane.margin></ImageView>
                <Label text="Chicago Style">
                  <padding>
                     <Insets top="10.0" />
                  </padding>
                  <font>
                     <Font name="Canela Regular Regular" size="18.0" />
                  </font></Label>
             </VBox>
             <VBox alignment="CENTER" onMouseClicked="#onNewYorkClick" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="TOP">
                 <ImageView fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                         <Image url="@../../../assets/ny_pizza.jpeg" />
                     </image>
                     <GridPane.margin>
                         <Insets />
                     </GridPane.margin></ImageView>
                 <Label text="New York Style">
                     <padding>
                         <Insets top="10.0" />
                     </padding>
                     <font>
                         <Font name="Canela Regular Regular" size="18.0" />
                     </font></Label>
             </VBox>
             <VBox alignment="CENTER" onMouseClicked="#onOrdersClick" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
                 <ImageView fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                         <Image url="@../../../assets/store.png" />
                     </image>
                     <GridPane.margin>
                         <Insets />
                     </GridPane.margin></ImageView>
                 <Label text="Store Orders">
                     <padding>
                         <Insets top="10.0" />
                     </padding>
                     <font>
                         <Font name="Canela Regular Regular" size="18.0" />
                     </font></Label>
             </VBox>
             <VBox alignment="CENTER" onMouseClicked="#onCartClick" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="TOP">
                 <ImageView fitHeight="100.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                         <Image url="@../../../assets/cart.png" />
                     </image>
                     <GridPane.margin>
                         <Insets />
                     </GridPane.margin></ImageView>
                 <Label text="Current Order">
                     <padding>
                         <Insets top="10.0" />
                     </padding>
                     <font>
                         <Font name="Canela Regular Regular" size="18.0" />
                     </font></Label>
             </VBox>
         </children>
         <VBox.margin>
            <Insets bottom="50.0" />
         </VBox.margin>
      </GridPane>
   </children>

</VBox>
