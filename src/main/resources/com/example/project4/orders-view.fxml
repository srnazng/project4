<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.project4.OrdersController">
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
    <children>
        <Label text="Store Orders">
            <font>
                <Font name="Avenir Next Bold" size="24.0" />
            </font>
        </Label>
      <HBox prefHeight="50.0" prefWidth="200.0">
         <children>
            <Label text="Order Number">
               <HBox.margin>
                  <Insets top="5.0" />
               </HBox.margin>
            </Label>
            <ComboBox fx:id="orderNumber" prefWidth="150.0" onAction="#setOrder">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </ComboBox>
            <Label text="Order Total (tax included) $">
               <HBox.margin>
                  <Insets left="20.0" top="5.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="orderTotal" prefWidth="125.0">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
         <padding>
            <Insets top="20.0" />
         </padding>
      </HBox>
      <ListView fx:id="pizzaList" prefHeight="200.0" prefWidth="200.0">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
      </ListView>
      <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
         <children>
            <Button mnemonicParsing="false" prefWidth="125.0" text="Cancel Order" onMouseClicked="#cancelOrder">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button mnemonicParsing="false" prefWidth="125.0" text="Export Store Orders" onMouseClicked="#exportStoreOrders" />
         </children>
      </HBox>
    </children>
</VBox>
